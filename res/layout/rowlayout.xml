<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="@android:style/TextAppearance" android:text="NONAME" android:textStyle="bold"
              android:textSize="14dp" android:id="@+id/txtResourceName" android:paddingTop="4dp"
              android:paddingLeft="4dp" android:layout_weight="1"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="@android:style/TextAppearance" android:text="TOUCH TO RENAME"
              android:textStyle="bold" android:textSize="24dp" android:id="@+id/textResourcePassword"
              android:paddingBottom="4dp" android:paddingLeft="4dp" android:layout_weight="1"/>
</LinearLayout>